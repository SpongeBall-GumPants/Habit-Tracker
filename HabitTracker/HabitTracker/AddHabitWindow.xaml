<Window x:Class="HabitTracker.AddHabitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Habit" Height="450" Width="400">
	<StackPanel Margin="10">
		<Label Content="Name:"/>
		<TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

		<Label Content="Description:"/>
		<TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10"/>

		<Label Content="Length (minutes):"/>
		<TextBox x:Name="LengthTextBox" Margin="0,0,0,10"/>

		<Label Content="Frequency (per day):"/>
		<TextBox x:Name="FrequencyTextBox" Margin="0,0,0,10"/>

		<Label Content="Importance (0-5):"/>
		<TextBox x:Name="ImportanceTextBox" Margin="0,0,0,10"/>

		<Label Content="Severity (0-5):"/>
		<TextBox x:Name="SeverityTextBox" Margin="0,0,0,10"/>

		<Label Content="Planned Time Per Week (minutes):"/>
		<TextBox x:Name="PlannedTimeTextBox" Margin="0,0,0,10"/>

		<Button Content="Save Habit" Click="SaveHabit_Click" Height="30"/>
	</StackPanel>
</Window>